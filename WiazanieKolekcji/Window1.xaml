<Window x:Class="WiazanieKolekcji.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produkt" Height="220" Width="350">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Symbol:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Symbol}" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Content="Nazwa:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Nazwa}" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <Label Content="Liczba sztuk:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding LiczbaSztuk}" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <Label Content="Magazyn:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Magazyn}" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <Button Name="btnPotwierdz" Content="PotwierdŸ" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                Margin="5" HorizontalAlignment="Center" Click="btnPotwierdz_Click"/>
    </Grid>
</Window>
